{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}

